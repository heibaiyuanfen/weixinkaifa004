/* 整体容器 */
.container {
  position: relative;
  padding: 20rpx;
}

/* 区块标题 */
.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.section-title .line {
  flex: 1;
  height: 1rpx;
  background-color: #ccc;
  margin: 0 20rpx;
}
.section-title .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.section-title .subtitle {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 网格布局 */
.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.card {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
}
.thumb {
  width: 100%;
  height: 220rpx;
}
.caption {
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}

/* 叠加层：右下角图片数量 */
.badge {
  position: absolute;
  bottom: 80rpx;
  right: 10rpx;
  background-color: rgba(0,0,0,0.6);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}
.badge text {
  color: #fff;
  font-size: 24rpx;
}

/* 回首页按钮 */
.home-btn {
  position: fixed;
  right: 30rpx;
  bottom: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
}
